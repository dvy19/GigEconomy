<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:background="@drawable/user_home_ad"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/viewRequestedService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/form_back"
        android:padding="12dp">

        <!-- Service Type & Category -->
        <TextView
            android:id="@+id/txtServiceType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plumbing - Pipe Repair"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <!-- City -->
        <TextView
            android:id="@+id/serviceCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghaziabad"
            android:textSize="13sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="#E0E0E0"/>

        <!-- Rate & Status Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â‚¹500"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"/>

            <TextView
                android:id="@+id/ServiceStatus"
                android:clickable="true"
                android:textAllCaps="false"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Detail"
                android:textSize="12sp"
                android:padding="6dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_status_requested"/>
        </LinearLayout>

        <!-- Booking Time -->
        <TextView
            android:id="@+id/txtCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Infotech Solutions"
            android:textSize="12sp"
            android:textColor="#777777"
            android:layout_marginTop="6dp"/>

    </LinearLayout>




</LinearLayout>
