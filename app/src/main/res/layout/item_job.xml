<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Card Background -->
    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/white"
        android:id="@+id/viewJobDetail"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Doctor Image -->
            <ImageView
                android:id="@+id/imgService"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="centerCrop"
                android:src="@drawable/chef"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- Doctor Name -->
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/ServiceType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="AC  Cleaning"
                android:textColor="#1F2937"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/imgService"
                app:layout_constraintTop_toTopOf="@id/imgService"
                app:layout_constraintEnd_toStartOf="@id/tvRating"/>

            <!-- Rating -->
            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.3"
                android:textColor="#374151"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ServiceType"/>

            <!-- Star Icon -->
            <ImageView
                android:id="@+id/imgStar"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/star"
                app:layout_constraintStart_toEndOf="@id/tvRating"
                app:layout_constraintTop_toTopOf="@id/tvRating"
                app:layout_constraintBottom_toBottomOf="@id/tvRating"
                android:layout_marginStart="4dp"/>

            <!-- Location Icon -->
            <ImageView
                android:id="@+id/imgLocation"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/location"
                app:layout_constraintStart_toStartOf="@id/ServiceType"
                app:layout_constraintTop_toBottomOf="@id/ServiceType"
                android:layout_marginTop="6dp"/>

            <!-- Location Text -->
            <TextView
                android:id="@+id/serviceCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='Delhi'
                android:textColor="#6B7280"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/imgLocation"
                app:layout_constraintTop_toTopOf="@id/imgLocation"
                android:layout_marginStart="4dp"/>

            <!-- Experience Label -->
            <TextView
                android:id="@+id/companyNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company"
                android:textColor="#6B7280"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/ServiceType"
                app:layout_constraintTop_toBottomOf="@id/imgLocation"
                android:layout_marginTop="10dp"/>

            <!-- Experience Value -->
            <TextView
                android:id="@+id/companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Infotech Cleaners"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/companyNameLabel"
                app:layout_constraintTop_toBottomOf="@id/companyNameLabel"
                android:layout_marginTop="2dp"/>

            <!-- Specialist Label -->
            <TextView
                android:id="@+id/tvRateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:textColor="#6B7280"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/companyNameLabel"
                app:layout_constraintTop_toTopOf="@id/companyNameLabel"
                android:layout_marginStart="100dp"/>

            <!-- Specialist Value -->
            <TextView
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$200"
                android:textColor="#111827"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/tvRateLabel"
                app:layout_constraintTop_toBottomOf="@id/tvRateLabel"
                android:layout_marginTop="2dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
