<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="34dp"
    tools:context=".user.ProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/form_back"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Profile"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:id="@+id/userDisName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/userDisAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/userDisCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:textColor="@color/black"
                android:textSize="24sp"
                />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/userDisPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pin"
                android:textColor="@color/black"
                android:textSize="24sp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Email"
                android:background="@drawable/btn_back"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:padding="12dp"
                android:layout_marginTop="20dp"
                android:id="@+id/userAddMail"
                android:clickable="true"
                android:focusable="true"/>





        </LinearLayout>





    </LinearLayout>

</FrameLayout>